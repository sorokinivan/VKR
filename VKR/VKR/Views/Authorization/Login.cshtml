<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

</head>
<style>

    .screen-1 {
        border-radius: 30px;
        box-shadow: 0 0 2em #e6e9f9;
        overflow-y: hidden;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin-left: auto;
        margin-right: auto;
        width: 30%;
        height: 600px;
        background-color: white;
    }

        .screen-1 .email {
            background: white;
            box-shadow: 0 0 2em #e6e9f9;
            padding: 1em;
            display: flex;
            gap: 0.5em;
            border-radius: 20px;
            color: #4d4d4d;
            margin-top: -3em;
            width: 260px;
        }

            .screen-1 .email input {
                outline: none;
                border: none;
            }

                .screen-1 .email input::placeholder {
                    color: black;
                    font-size: 0.9em;
                }

            .screen-1 .email ion-icon {
                color: #4d4d4d;
                margin-bottom: -0.2em;
            }

        .screen-1 .password {
            background: white;
            box-shadow: 0 0 2em #e6e9f9;
            padding: 1em;
            display: flex;
            gap: 0.5em;
            border-radius: 20px;
            color: #4d4d4d;
            width: 260px;
        }

            .screen-1 .password input {
                outline: none;
                border: none;
            }

                .screen-1 .password input::placeholder {
                    color: black;
                    font-size: 0.9em;
                }

            .screen-1 .password ion-icon {
                color: #4d4d4d;
                margin-bottom: -0.2em;
            }

        .screen-1 .sign-up {
            display: flex;
            font-size: 0.7em;
            color: #5e5e5e;
            gap: 14em;
            padding-bottom: 10em;
            margin-left: auto;
            margin-right: auto;
        }

            .screen-1 .sign-up span {
                cursor: pointer;
            }

        .screen-1 .login {
            padding: 1em;
            background: #3e4684;
            color: white;
            border: none;
            border-radius: 30px;
            font-weight: 600;
            width: 200px;
        }
</style>
<body>
    <div class="screen-1">
        <div class="email">
            <ion-icon name="mail-outline"></ion-icon>
            <input type="email" id="email" name="email" placeholder="Email" />
        </div>
        <br />
        <div class="password">
            <ion-icon name="lock-closed-outline"></ion-icon>
            <input class="pas" id="password" type="password" name="password" placeholder="Password" />
            <ion-icon class="show-hide" name="eye-outline" style="margin-left: auto; margin-right: 0;"></ion-icon>
        </div>
        <br />
        <div class="sign-up"><a href="@Url.Action("Register","Authorization")" class="site_title">Signup</a></div>
        <button class="login" id="loginBtn" onclick="onLoginClick()">Login</button>
    </div>
</body>
</html>

<script>
    function onLoginClick() {
        debugger;
            let urlPath = '@Url.Action("LoginUser", "Authorization")';
            var email = document.getElementById("email").value;
            var password = document.getElementById("password").value;
                var userModel = {
                "Email": email,
                "Password": password
                };
            sendRequest(urlPath, "POST", JSON.stringify(userModel), "html", onSuccessInitRequestForExport, onError, window.location.pathname);

        }

        function onSuccessInitRequestForExport() {
            showPopupMessage("Вход успешно выполнен", 'success');
            window.location.href = '/Home/Index/';
        }

         function onError() {
             showPopupMessage("Вход не выполнен", 'error');
        }

</script>